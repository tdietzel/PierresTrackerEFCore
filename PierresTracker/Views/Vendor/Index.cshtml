@using PierresTracker.Models;
@model List<PierresTracker.Models.Vendor>;

<h1>Vendors</h1>


@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
} 
else
{
  <ul>
  @foreach(Vendor vendor in Model)
  {
    <li>@Html.ActionLink($"{vendor.Name}", "Details", new { id = vendor.VendorId })</li>
  }
  </ul>
}

<p>@Html.ActionLink("Add new vendor", "Create")</p>
<p>@Html.ActionLink("Add new order", "Create", "Order")</p>